# Server
PORT=8080
NODE_ENV=development

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/farmers_assistant
# or Atlas: mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# CORS (include your current Vite URL/port)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Auth
JWT_SECRET=change_this_to_a_long_random_string

# Optional: seed an officer account
SEED_OFFICER_EMAIL=officer@example.com
SEED_OFFICER_PASSWORD=password123